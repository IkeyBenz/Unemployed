<!-- This is sample form for testing routes -->
<div class="row">
    <div class="col-md-8 form-contents">
        <div class="posts-form">
            <form  action='/posts' method="post">
                <h3>Create A New Post</h3>
                <div class="form-group">
                    <input type="text" name="title" class="form-control posts-title-input" placeholder="Title"/>
                </div>
                <div class="form-group">
                    <select class="custom-select" name="category" id="category-selector">
                        <option selected>Category</option>
                        <option value="frontend-development">Frontend Web Development</option>
                        <option value="backend-development">Backend Development</option>
                        <option value="iOS-development">iOS Development</option>
                        <option value="art">Art</option>
                        <option value="digital-marketing">Digital Marketing</option>
                        <option value="content-creation">Content Creation</option>
                        <option value="personal-branding">Personal Branding</option>
                        <option value="music">Music</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea name="content" class="form-control posts-content-input" placeholder="Type words here ..." style="width: 100%; height: 220px;"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Post</button>

        </form>
    </div>
</div>
